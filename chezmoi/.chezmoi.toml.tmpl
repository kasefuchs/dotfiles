{{ $name := promptStringOnce . "name" "Enter your nickname: " "kasefuchs" }}
{{ $email := promptStringOnce . "email" "Enter your email: " "kasefuchs@protonmail.com" }}
{{ $sshPublicKey := promptStringOnce . "sshPublicKey" "Enter your public SSH key: " (index (gitHubKeys $name) 0).Key }}
{{ $agePublicKey := promptStringOnce . "agePublicKey" "Enter your public AGE key: " }}

encryption = "age"

[age]
identity = "~/.config/age/key.txt"
recipient = {{ $agePublicKey | quote }}

[git]
autoCommit = true
commitMessageTemplateFile = ".chezmoitemplates/commit_message.tmpl"

[data]
name = {{ $name | quote }}
email = {{ $email | quote }}
sshPublicKey = {{ $sshPublicKey | quote }}
agePublicKey = {{ $agePublicKey | quote }}
