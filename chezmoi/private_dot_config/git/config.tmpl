[user]
  name = {{ .name }}
  email = {{ .email }}
  signingkey = {{ .sshPublicKey }}

[core]
  pager = delta

[gpg]
  format = ssh

[tag]
  gpgSign = true

[commit]
  gpgSign = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
