{
  "height": 20,
  "position": "top",
  "modules-left": ["niri/workspaces", "niri/window"],
  "modules-center": [],
  "modules-right": [
    "tray",
    "backlight",
    "power-profiles-daemon",
    "pulseaudio",
    "temperature",
    "niri/language",
    "battery",
    "clock",
    "group/power"
  ],
  "group/power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/poweroff",
      "custom/suspend",
      "custom/reboot",
    ]
  },
  "custom/poweroff": {
    "format": "\udb81\udc25",
    "tooltip": false,
    "on-click": "systemctl poweroff"
  },
  "custom/suspend": {
    "format": "\udb81\udcb2",
    "tooltip": false,
    "on-click": "systemctl suspend"
  },
  "custom/reboot": {
    "format": "\udb81\udf09",
    "tooltip": false,
    "on-click": "systemctl reboot"
  },
  "tray": {
    "spacing": 8,
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "\udb83\ude08",
    "format-icons": {
      "default": ["\udb81\udd7f", "\udb81\udd80", "\udb81\udd7e"],
    },
    "reverse-scrolling": true,
  },
  "temperature": {
    "format": "{temperatureC}Â°C {icon}",
    "format-icons": ["\udb84\udcc3", "\udb81\udd0f", "\udb84\udcc2"],
    "warning-threshold": 80,
    "critical-threshold": 90,
  },
  "backlight": {
    "format": "{icon}",
    "format-icons": [
      "\udb80\udcda",
      "\udb80\udcdb",
      "\udb80\udcdc",
      "\udb80\udcdd",
      "\udb80\udcde",
      "\udb80\udcdf",
      "\udb80\udce0",
    ],
    "tooltip-format": "{percent}%",
    "reverse-scrolling": true,
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "format-icons": {
      "power-saver": "\udb83\udf86",
      "balanced": "\udb83\u0f85",
      "performance": "\udb81\udcc5",
    },
  },
  "niri/language": {
    "format": "{short} \uDB80\uDF0C",
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% {icon} \udb85\udc0b",
    "format-plugged": "{capacity}% {icon} \uDB85\uDC0B",
    "format-critical": "{capacity}% {icon} \udb84\ude38",
    "tooltip-format-charging": "{timeTo} ({power}w)",
    "format-icons": [
      "\udb80\udc8e",
      "\udb80\udc7a",
      "\udb80\udc7b",
      "\udb80\udc7c",
      "\udb80\udc7d",
      "\udb80\udc7e",
      "\udb80\udc7f",
      "\udb80\udc80",
      "\udb80\udc81",
      "\udb80\udc82",
      "\udb80\udc79",
    ],
    "max-length": 25,
  },
  "clock": {
    "format": "{:%I:%M %p} \uDB82\uDD54",
    "tooltip-format": "{:%d.%m.%Y}",
  },
}
